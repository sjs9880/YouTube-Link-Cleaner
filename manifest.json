{
    "manifest_version": 3,
    "name": "YouTube Link Cleaner",
    "version": "1.1",
    "description": "유튜브 추적 코드를 진입 시점과 복사 시점에 모두 제거합니다.",
    "permissions": [
        "storage",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://www.youtube.com/*",
        "*://youtu.be/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}